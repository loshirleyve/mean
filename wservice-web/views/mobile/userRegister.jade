extends ../layout/layout-mobile

block title
    p 用户注册

block content
    script(src="/js/mobile/userRegister.js")
    div(ng-app="userRegisterApp")
        div(ng-view)
        script(type="text/ng-template",id="register.html")
            div.well
                h3 注册移办通用户
                p {{vm.params.inviteUserName}} 邀请你加入{{vm.params.inviteInstName}} - {{vm.params.inviteDeptName}}
            div(npt-form="vm.regFormOptions",model="vm.model")
            p
            div.well
                h5
                    a(href="/mobile/download") 下载移办通

        script(type="text/ng-template",id="success.html")
            div.jumbotron

                div.row
                    div.col-xs-4
                        img(src="/image/yun9logo.png",style="width:60px;")
                    div.col-xs-8
                        h3 注册成功
            div.well
                a(href="/mobile/download") 下载移办通

        script(type="text/ng-template",id="failed.html")
            div.jumbotron
                h1 注册错误
                p 注册邀请码不能存在或已经失效


