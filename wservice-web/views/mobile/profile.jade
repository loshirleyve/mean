                                a(href="", role="button")
                                    span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
                                    span.sr-only
                    li.col-xs-12.col-sm-12.col-md-12.col-lg-12
                        ul.list-inline.row
                            li.col-xs-2.col-sm-2.col-md-1.col-lg-1
                                img.visible-md-inline-block.visible-lg-inline-block.hidden-sm.hidden-xs.img-large(src="/image/contact@3x.png")
                                img.visible-sm-inline-block.visible-xs-inline-block.hidden-md.hidden-lg.img-small(src="/image/contact@3x.png")
                            li.col-md-10.col-sm-8.col-xs-8.col-lg-10(ng-click="vm.toClient()")
                                p.visible-md-inline-block.visible-lg-inline-block.hidden-sm.hidden-xs.text-large 我的客户
                                p.visible-sm-inline-block.visible-xs-inline-block.hidden-md.hidden-lg.text-small 我的客户
                            li.col-md-1.col-sm-2.col-xs-2.col-lg-1.link-large.visible-md-inline-block.visible-lg-inline-block.hidden-sm.hidden-xs
                                a(href="", role="button")
                                    span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
