                                    span.sr-only

        script(type="text/ng-template", id="userInfo.html")
            div#user-header.row
                div.col-xs-1.col-sm-1
                    a(href="", role="button")
                        span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
                        span.sr-only
                div.col-xs-10.col-sm-10.text-center
                    p 个人信息
            div#user-head.row
                div.col-xs-3.col-sm-3
                    p 头像
                div.col-xs-3.col-sm-2.col-md-1.col-lg-1.col-md-offset-7.col-lg-offset-7.col-xs-offset-6.col-sm-offset-7
                    img.image-small.img-rounded.visible-xs-inline-block.visible-sm-inline-block.hidden-md.hidden-lg(npt-image="vm.headerfileid", npt-image-options="vm.imageOptions")
                    img.image-large.img-rounded.visible-md-inline-block.visible-lg-inline-block.hidden-sm.hidden-xs(npt-image="vm.headerfileid", npt-image-options="vm.imageOptions")
            div#devide.row
            div#info-item
                div.row
                    div.col-sm-12
                        span 名字
                        span.pull-right(ng-bind="vm.userInfo.data.name")
                hr.row
                div.row
                    div.col-sm-12
                        span 机构
                        span.small.pull-right(ng-bind="vm.instName")
                hr.row
                div.row
                    div.col-sm-12
                        span 部门
                        span.pull-right
                hr.row
                div.row
                    div.col-sm-12
                        span.disp-block 个性签名
                        span.small(ng-bind="vm.userInfo.data.signature")
                        a.pull-right(href="", role="button")
                            span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
                            span.sr-only
                hr.row
                div.row
                    div.col-sm-12
                        span 修改密码
                        a.pull-right(href="", role="button")
                                    span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
                                    span.sr-only
                hr.row

