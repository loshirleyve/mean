                    li.col-xs-12.col-sm-12.col-md-12.col-lg-12
                        ul.list-inline.row
                            li.col-xs-2.col-sm-2.col-md-1.col-lg-1
                                img.visible-md-inline-block.visible-lg-inline-block.hidden-sm.hidden-xs.img-large(src="/image/setting@3x.png")
                                img.visible-sm-inline-block.visible-xs-inline-block.hidden-md.hidden-lg.img-small(src="/image/setting@3x.png")
