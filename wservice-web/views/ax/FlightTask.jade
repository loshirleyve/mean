extends ../layout/layout-bizpage
block titleContent
    title 任务列表
block content
    script(src="/js/ax/FlightTask.js")
    div(ng-app="FlightTaskApp")
        //内容区域
        div(ng-view)
        //列表模板
        script(type="text/ng-template",id="list.html")
            //功能导航区域
            ul.breadcrumb
                li
                    a(href="/app/home")
                        span.glyphicon.glyphicon-home
                        span 首页
                li.active 任务列表
            //功能导航
            nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
                div.container-fluid
                    div.navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="#") 任务列表
                    div#navbar-collapse.collapse.navbar-collapse.navbar-right
                        ul.nav.navbar-nav.navbar-left(ng-if="vm.workorderList.loading()")
                            li
                                a(href="") 正在查询,请稍后...
                        ul.nav.navbar-nav.navbar-left(ng-if="!vm.workorderList.loading()")
                            li
                                a(ng-click="vm.query()") 刷新任务
            div
                ul.media-list
                    li.media(ng-repeat="item in vm.model")
                        div.media-body
                            a.list-group-item
                                div.row
                                    div.col-md-10
                                        p {{item.name}}
                                    div.col-md-2
                                        p.pull-right {{item.createdate | timestampFilter}}
                                div.row
                                    div.col-md-10
                                        p {{item.state | ctrlCodeFilter:'workstate':'name':'no'}}
                                    div.col-md-2
                                        button.btn.btn-primary.btn-sm.pull-right(type="button",ng-click="vm.doTask(item.id,item.no);") 办理
                                div.row
                                    div.col-md-12
                                        p {{item.duty}}