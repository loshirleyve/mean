extends ../layout/layout-bizpage
block titleContent
    title 完成任务
block content
    script(src="/js/ax/beginTask.js")
    div(ng-app="AXCompleteTaskApp")
        //内容区域
        div(ng-view)

        //列表模板
        script(type="text/ng-template",id="form.html")
            //功能导航区域
            ul.breadcrumb
                li
                    a(href="/app/home")
                        span.glyphicon.glyphicon-home
                        span 首页
                li.active 完成任务

            //功能导航
            nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
                div.container-fluid
                    div.navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="#") 完成任务
                    div#navbar-collapse.collapse.navbar-collapse.navbar-right
                        ul.nav.navbar-nav.navbar-left(ng-if="vm.queryService.orderList.loading() || vm.orderUnreadService.ordersIsUnread.loading()")
                            li
                                a(href="") 正在查询,请稍后...
                        ul.nav.navbar-nav.navbar-left(ng-if="!vm.queryService.orderList.loading() && !vm.orderUnreadService.ordersIsUnread.loading()")
                            li
                                a(href="") 完成任务
                            li
                                a(href="") 刷新任务