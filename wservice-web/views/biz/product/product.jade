            div.page-body
                div.list-group
                    div.list-group-item(ng-repeat="item in vm.modelProductGroups")
                        div.list-group-item-heading
                            div.row
                                div.col-xs-6.col-md-6
                                    div(style="width:50px;height:50px;",npt-image="item.backgorundimgid")
                                    span &nbsp &nbsp
                                    span {{item.groupname}}
                                div.col-xs-6.col-md-6
                                    button.btn.btn-danger.btn-sm.pull-right(type="button") 删除
                                    span.pull-right &nbsp &nbsp
                                    a.btn.btn-primary.btn-sm.pull-right(type="button",href="#/edit/group/{{vm.productid}}/{{item.id}}") 编辑
                        div.list-group-item-text
                            span 所属地区:{{item.province}} - {{item.city}} - {{item.district}}; 置顶显示:{{item.top}}

            div.page-header
                div.row
                    div.col-xs-6.col-md-6
                        h4 产品分类
                    div.col-xs-6.col-md-6
                        a.btn.btn-default.pull-right(type="button",href="#/edit/classifies/{{vm.productid}}") 添加产品分类
            div.page-body
                div.list-group
                    div.list-group-item(ng-repeat="item in vm.modelProductClassifies")
                        div.list-group-item-heading
                            div.row
                                div.col-xs-6.col-md-6
                                    h5 {{item.classifyname}}
                                div.col-xs-6.col-md-6
                                    button.btn.btn-danger.btn-sm.pull-right(type="button") 删除
                                    span.pull-right &nbsp &nbsp
                                    a.btn.btn-primary.btn-sm.pull-right(type="button",href="#/edit/classifies/{{vm.productid}}/{{item.id}}") 编辑
                        div.list-group-item-text
                            span 价格:{{item.price | number}} 排序:{{item.sort}}

            div.page-header
                div.row
                    div.col-xs-6.col-md-6
                        h4 办理资料
                    div.col-xs-6.col-md-6
                        button.btn.btn-default.pull-right(type="button") 添加办理资料
            div.page-body
                div.list-group
                    div.list-group-item(ng-repeat="item in vm.modelProductRequirements")
                        div.list-group-item-heading
                            div.row
                                div.col-xs-6.col-md-6
                                    h5 {{item.attachname}}
                                div.col-xs-6.col-md-6
                                    button.btn.btn-danger.btn-sm.pull-right(type="button") 删除
                                    span.pull-right &nbsp &nbsp
                                    button.btn.btn-primary.btn-sm.pull-right(type="button") 编辑
                        div.list-group-item-text
                            span 识别Key:{{item.attachkey}}; 填写方式:{{item.inputtype}}; 填写说明:{{item.inputdesc}}; 填写样板:{{item.demovalue}}; 交接方式:{{item.doc}};

            div.page-header
                div.row
                    div.col-xs-6.col-md-6
                        h4 服务阶段
                    div.col-xs-6.col-md-6
                        button.btn.btn-default.pull-right(type="button") 添加服务阶段
            div.page-body
                div.list-group
                    div.list-group-item(ng-repeat="item in vm.modelProductPhases")
                        div.list-group-item-heading
                            div.row
                                div.col-xs-6.col-md-6
                                    h5 {{item.sortno}} {{item.name}}
                                div.col-xs-6.col-md-6
                                    button.btn.btn-danger.btn-sm.pull-right(type="button") 删除
                                    span.pull-right &nbsp &nbsp
                                    button.btn.btn-primary.btn-sm.pull-right(type="button") 编辑
                        div.list-group-item-text
                            dl.dl-horizontal
                                dt 服务周期及时间:
                                dd {{item.cyclevalue}}{{item.cycle | ctrlCodeFilter:'cycle':'name':'no'}}; 办理时间:{{item.processdays}}个工作日;
                                dt 服务职责:
                                dd {{item.duty}}
                                dt 服务说明:
                                dd {{item.phasedescr}}
                                dt 备注:
                                dd {{item.remark}}

